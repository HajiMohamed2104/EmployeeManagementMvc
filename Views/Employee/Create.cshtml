@model WebApplication1.DTOs.CreateEmployeeDto
@{
    ViewData["Title"] = "Create Employee";
}

<div class="employee-create-container">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="page-title">
                        <i class="fas fa-user-plus"></i> Create Employee
                    </h1>
                    <p class="text-muted">Add a new employee to your organization</p>
                </div>
                <div class="page-actions">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card create-form-card">
                <div class="card-header">
                    <h5><i class="fas fa-id-card"></i> Employee Information</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Personal Information Section -->
                        <div class="section-header">
                            <i class="fas fa-user"></i>
                            <h6>Personal Information</h6>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="EmployeeNumber" class="form-label">
                                        <i class="fas fa-id-badge"></i> Employee Number
                                    </label>
                                    <div class="input-group">
                                        <input asp-for="EmployeeNumber" class="form-control" placeholder="e.g., EMP001" />
                                        <span class="input-group-text"><i class="fas fa-hashtag"></i></span>
                                    </div>
                                    <span asp-validation-for="EmployeeNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Email" class="form-label">
                                        <i class="fas fa-envelope"></i> Email Address
                                    </label>
                                    <div class="input-group">
                                        <input asp-for="Email" class="form-control" type="email" placeholder="employee@company.com" />
                                        <span class="input-group-text"><i class="fas fa-at"></i></span>
                                    </div>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="FirstName" class="form-label">
                                        <i class="fas fa-user"></i> First Name
                                    </label>
                                    <input asp-for="FirstName" class="form-control" placeholder="Enter first name" />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="LastName" class="form-label">
                                        <i class="fas fa-user"></i> Last Name
                                    </label>
                                    <input asp-for="LastName" class="form-control" placeholder="Enter last name" />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="PhoneNumber" class="form-label">
                                        <i class="fas fa-phone"></i> Phone Number
                                    </label>
                                    <div class="input-group">
                                        <input asp-for="PhoneNumber" class="form-control" placeholder="+1 (555) 123-4567" />
                                        <span class="input-group-text"><i class="fas fa-phone"></i></span>
                                    </div>
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="DateOfBirth" class="form-label">
                                        <i class="fas fa-birthday-cake"></i> Date of Birth
                                    </label>
                                    <div class="input-group">
                                        <input asp-for="DateOfBirth" class="form-control" type="date" />
                                        <span class="input-group-text"><i class="fas fa-calendar"></i></span>
                                    </div>
                                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Employment Information Section -->
                        <div class="section-header mt-4">
                            <i class="fas fa-briefcase"></i>
                            <h6>Employment Information</h6>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Position" class="form-label">
                                        <i class="fas fa-user-tie"></i> Job Position
                                    </label>
                                    <div class="input-group">
                                        <input asp-for="Position" class="form-control" placeholder="e.g., Software Engineer" />
                                        <span class="input-group-text"><i class="fas fa-briefcase"></i></span>
                                    </div>
                                    <span asp-validation-for="Position" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="DepartmentId" class="form-label">
                                        <i class="fas fa-building"></i> Department
                                    </label>
                                    <select asp-for="DepartmentId" class="form-select" asp-items="ViewBag.Departments">
                                        <option value="">-- Select Department --</option>
                                    </select>
                                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ManagerId" class="form-label">
                                        <i class="fas fa-user-tie"></i> Manager
                                    </label>
                                    <select asp-for="ManagerId" class="form-select" asp-items="ViewBag.Managers">
                                        <option value="">-- No Manager --</option>
                                    </select>
                                    <span asp-validation-for="ManagerId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="HireDate" class="form-label">
                                        <i class="fas fa-calendar-plus"></i> Hire Date
                                    </label>
                                    <div class="input-group">
                                        <input asp-for="HireDate" class="form-control" type="date" id="hireDateInput" />
                                        <span class="input-group-text"><i class="fas fa-calendar"></i></span>
                                    </div>
                                    <span asp-validation-for="HireDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Salary" class="form-label">
                                        <i class="fas fa-dollar-sign"></i> Monthly Salary
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input asp-for="Salary" class="form-control" type="number" step="0.01" placeholder="0.00" />
                                        <span class="input-group-text">.00</span>
                                    </div>
                                    <span asp-validation-for="Salary" class="text-danger"></span>
                                    <small class="form-text text-muted">Annual salary will be calculated automatically</small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <div class="status-toggle">
                                        <label class="form-label">
                                            <i class="fas fa-toggle-on"></i> Employment Status
                                        </label>
                                        <div class="form-check form-switch">
                                            <input asp-for="IsActive" class="form-check-input" id="isActiveSwitch" />
                                            <label class="form-check-label" for="isActiveSwitch">
                                                <span class="status-text">@(Model?.IsActive == true ? "Active" : "Inactive")</span>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Form Actions -->
                        <div class="form-actions">
                            <div class="d-flex gap-3 justify-content-end">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="fas fa-save"></i> Create Employee
                                </button>
                                <button type="reset" class="btn btn-outline-secondary btn-lg">
                                    <i class="fas fa-undo"></i> Reset Form
                                </button>
                                <a asp-action="Index" class="btn btn-outline-danger btn-lg">
                                    <i class="fas fa-times"></i> Cancel
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <!-- Help & Progress Section -->
        <div class="col-md-4">
            <div class="help-section">
                <!-- Progress Indicator -->
                <div class="card progress-card">
                    <div class="card-header">
                        <h5><i class="fas fa-tasks"></i> Form Progress</h5>
                    </div>
                    <div class="card-body">
                        <div class="progress mb-3">
                            <div class="progress-bar" role="progressbar" id="formProgress" style="width: 0%"></div>
                        </div>
                        <div class="progress-text">
                            <small id="progressText">0 of 9 fields completed</small>
                        </div>
                    </div>
                </div>

                <!-- Help Section -->
                <div class="card help-card">
                    <div class="card-header">
                        <h5><i class="fas fa-question-circle"></i> Help & Guidelines</h5>
                    </div>
                    <div class="card-body">
                        <div class="help-item">
                            <i class="fas fa-id-badge text-primary"></i>
                            <div>
                                <h6>Employee Number</h6>
                                <p class="text-muted small">Use unique identifier like EMP001, EMP002, etc.</p>
                            </div>
                        </div>

                        <div class="help-item">
                            <i class="fas fa-envelope text-info"></i>
                            <div>
                                <h6>Email Format</h6>
                                <p class="text-muted small">Must be a valid email address</p>
                            </div>
                        </div>

                        <div class="help-item">
                            <i class="fas fa-dollar-sign text-success"></i>
                            <div>
                                <h6>Salary Information</h6>
                                <p class="text-muted small">Monthly salary (0-1,000,000). Annual calculated automatically.</p>
                            </div>
                        </div>

                        <div class="help-item">
                            <i class="fas fa-building text-warning"></i>
                            <div>
                                <h6>Department</h6>
                                <p class="text-muted small">Required field. Select from available departments.</p>
                            </div>
                        </div>

                        <div class="help-item">
                            <i class="fas fa-user-tie text-info"></i>
                            <div>
                                <h6>Manager</h6>
                                <p class="text-muted small">Optional field. Select a manager for this employee.</p>
                            </div>
                        </div>

                        <div class="validation-rules">
                            <h6><i class="fas fa-check-circle"></i> Validation Rules</h6>
                            <ul class="text-muted small">
                                <li><i class="fas fa-check text-success"></i> All required fields must be filled</li>
                                <li><i class="fas fa-check text-success"></i> Email must be valid format</li>
                                <li><i class="fas fa-check text-success"></i> Phone number in valid format</li>
                                <li><i class="fas fa-check text-success"></i> Salary between 0-1,000,000</li>
                                <li><i class="fas fa-check text-success"></i> Employee number must be unique</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.page-title {
    color: var(--dark-color);
    font-weight: 700;
    margin-bottom: 0.5rem;
}

.page-title i {
    color: var(--primary-color);
    margin-right: 0.5rem;
}

.create-form-card .card-header {
    background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
    color: white;
}

.section-header {
    display: flex;
    align-items: center;
    margin-bottom: 1.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--gray-200);
}

.section-header i {
    color: var(--primary-color);
    margin-right: 0.75rem;
    font-size: 1.2rem;
}

.section-header h6 {
    margin: 0;
    color: var(--dark-color);
    font-weight: 600;
}

.form-group {
    margin-bottom: 1.5rem;
}

.form-group .form-label {
    font-weight: 600;
    color: var(--gray-700);
    margin-bottom: 0.5rem;
    display: flex;
    align-items: center;
}

.form-group .form-label i {
    margin-right: 0.5rem;
    color: var(--primary-color);
}

.input-group-text {
    background: var(--gray-100);
    border-color: var(--gray-200);
    color: var(--gray-600);
}

.form-control:focus, .form-select:focus {
    border-color: var(--primary-color);
    box-shadow: 0 0 0 0.2rem rgba(99, 102, 241, 0.25);
}

.status-toggle .form-check-input:checked {
    background-color: var(--success-color);
    border-color: var(--success-color);
}

.status-text {
    margin-left: 0.5rem;
    font-weight: 500;
}

.form-actions {
    margin-top: 2rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--gray-200);
}

.help-section {
    position: sticky;
    top: 2rem;
}

.progress-card .card-header {
    background: linear-gradient(135deg, var(--secondary-color), #0891b2);
    color: white;
}

.progress {
    height: 8px;
    background: var(--gray-200);
    border-radius: 4px;
}

.progress-bar {
    background: linear-gradient(135deg, var(--success-color), #059669);
    border-radius: 4px;
}

.help-card .card-header {
    background: linear-gradient(135deg, var(--warning-color), #d97706);
    color: white;
}

.help-item {
    display: flex;
    align-items: flex-start;
    margin-bottom: 1rem;
    padding: 0.75rem;
    background: var(--gray-50);
    border-radius: 0.5rem;
    border-left: 4px solid var(--primary-color);
}

.help-item i {
    margin-right: 0.75rem;
    margin-top: 0.25rem;
    font-size: 1.1rem;
}

.help-item h6 {
    margin: 0 0 0.25rem 0;
    color: var(--dark-color);
    font-size: 0.9rem;
}

.help-item p {
    margin: 0;
}

.validation-rules {
    margin-top: 1.5rem;
    padding-top: 1rem;
    border-top: 1px solid var(--gray-200);
}

.validation-rules h6 {
    color: var(--dark-color);
    margin-bottom: 0.75rem;
}

.validation-rules li {
    margin-bottom: 0.25rem;
}

.fade-in {
    animation: fadeIn 0.6s ease-out;
}

@@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}
</style>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // Set default hire date to today
            if (!$('#hireDateInput').val()) {
                var today = new Date().toISOString().split('T')[0];
                $('#hireDateInput').val(today);
            }

            // Status toggle functionality
            $('#isActiveSwitch').change(function() {
                const statusText = $(this).is(':checked') ? 'Active' : 'Inactive';
                $(this).siblings('label').find('.status-text').text(statusText);
            });

            // Form progress tracking
            const requiredFields = [
                '#EmployeeNumber',
                '#Email',
                '#FirstName',
                '#LastName',
                '#Position',
                '#DepartmentId',
                '#ManagerId',
                '#HireDate',
                '#Salary'
            ];

            function updateProgress() {
                const filledFields = requiredFields.filter(field => $(field).val().trim() !== '').length;
                const progressPercent = (filledFields / requiredFields.length) * 100;

                $('#formProgress').css('width', progressPercent + '%');
                $('#progressText').text(`${filledFields} of ${requiredFields.length} fields completed`);

                // Change progress bar color based on completion
                const progressBar = $('#formProgress');
                progressBar.removeClass('bg-warning bg-info');
                if (progressPercent < 50) {
                    progressBar.addClass('bg-warning');
                } else if (progressPercent < 100) {
                    progressBar.addClass('bg-info');
                }
            }

            // Track changes on all required fields
            requiredFields.forEach(field => {
                $(field).on('input change', updateProgress);
            });

            // Initialize progress
            updateProgress();

            // Calculate age when date of birth changes
            $('#DateOfBirth').change(function() {
                var dob = new Date($(this).val());
                var today = new Date();
                var age = today.getFullYear() - dob.getFullYear();
                var monthDiff = today.getMonth() - dob.getMonth();

                if (monthDiff < 0 || (monthDiff === 0 && today.getDate() < dob.getDate())) {
                    age--;
                }

                // Update progress if DOB is filled
                updateProgress();
            });

            // Form validation enhancement
            $('form').on('submit', function(e) {
                const unfilledFields = requiredFields.filter(field => $(field).val().trim() === '');

                if (unfilledFields.length > 0) {
                    e.preventDefault();
                    Swal.fire({
                        title: 'Incomplete Form',
                        text: `Please fill in all required fields. ${unfilledFields.length} field(s) remaining.`,
                        icon: 'warning',
                        confirmButtonText: 'Continue Filling'
                    });

                    // Highlight unfilled fields
                    unfilledFields.forEach(field => {
                        $(field).addClass('is-invalid');
                    });
                }
            });

            // Remove validation styling on input
            $('.form-control, .form-select').on('input', function() {
                $(this).removeClass('is-invalid');
            });

            // Animate form sections on scroll
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        $(entry.target).addClass('fade-in');
                    }
                });
            }, observerOptions);

            $('.section-header').each(function() {
                observer.observe(this);
            });
        });
    </script>
}