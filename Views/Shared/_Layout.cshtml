<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Employee Management System</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="app-container">
        <!-- Sidebar -->
        <nav id="sidebar" class="sidebar">
            <div class="sidebar-header">
                <h3><i class="fas fa-building"></i> EMS</h3>
            </div>
            <ul class="sidebar-menu">
                <li class="menu-item">
                    <a href="@Url.Action("Index", "Home")" class="menu-link">
                        <i class="fas fa-home"></i> Dashboard
                    </a>
                </li>
                <li class="menu-item">
                    <a href="#" class="menu-link dropdown-toggle" data-bs-toggle="collapse" data-bs-target="#employeeSubmenu" aria-expanded="false">
                        <i class="fas fa-users"></i> Employees
                    </a>
                    <ul class="collapse submenu" id="employeeSubmenu">
                        <li><a href="@Url.Action("Index", "Employee")" class="submenu-link"><i class="fas fa-list"></i> All Employees</a></li>
                        <li><a href="@Url.Action("Create", "Employee")" class="submenu-link"><i class="fas fa-plus"></i> Add Employee</a></li>
                        <li><a href="@Url.Action("Statistics", "Employee")" class="submenu-link"><i class="fas fa-chart-bar"></i> Statistics</a></li>
                    </ul>
                </li>
                <li class="menu-item">
                    <a href="@Url.Action("Privacy", "Home")" class="menu-link">
                        <i class="fas fa-shield-alt"></i> Privacy
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Main Content -->
        <div class="main-content">
            <header class="top-navbar">
                <button class="sidebar-toggle" id="sidebarToggle">
                    <i class="fas fa-bars"></i>
                </button>
                <div class="navbar-brand">
                    <h4>@ViewData["Title"]</h4>
                </div>
            </header>

            <main class="content-area">
                @RenderBody()
            </main>

            <footer class="app-footer">
                <div class="container-fluid">
                    <p>&copy; 2025 Employee Management System. All rights reserved.</p>
                </div>
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
